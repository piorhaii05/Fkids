<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Size:"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSizeSItemChooseProduct"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_choose_detail_product"
            android:gravity="center"
            android:text="S"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSizeMItemChooseProduct"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_choose_detail_product"
            android:gravity="center"
            android:text="M"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSizeLItemChooseProduct"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_choose_detail_product"
            android:gravity="center"
            android:text="L"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSizeXLItemChooseProduct"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_choose_detail_product"
            android:gravity="center"
            android:text="XL"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Màu:"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtColorWhiteItemChooseProduct"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_choose_detail_product"
            android:gravity="center"
            android:text="Trắng"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtColorBlueItemChooseProduct"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_choose_detail_product"
            android:gravity="center"
            android:text="Xanh"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtColorYellowItemChooseProduct"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_choose_detail_product"
            android:gravity="center"
            android:text="Vàng"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtColorBlackItemChooseProduct"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/background_choose_detail_product"
            android:gravity="center"
            android:text="Đen"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <TextView
        android:id="@+id/txtSubmitItemChooseProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:background="@drawable/backround_button_product_add_to_cart"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:text="Xác nhận"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>