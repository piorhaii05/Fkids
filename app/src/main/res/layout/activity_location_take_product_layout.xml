<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".layout.LocationTakeProductLayout">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarLocationLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAlignment="center"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewLocationLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/txtAddLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:background="@drawable/backround_button_product_add_to_cart"
        android:padding="10dp"
        app:drawableStartCompat="@drawable/add_35"
        app:drawableTint="@color/white" />

</LinearLayout>