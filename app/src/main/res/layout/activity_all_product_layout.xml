<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layout.AllProductLayout"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAllProductLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance"
        android:gravity="center"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edtSearchViewAllProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="@drawable/search_item_menu"
        android:drawableTint="#3C2F2F"
        android:padding="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RecyclerViewAllProductLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>