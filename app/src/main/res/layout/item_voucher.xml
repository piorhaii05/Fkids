<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/item_products_list_like"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageItemVoucher"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="TODO"
                android:scaleType="centerCrop"
                android:src="@drawable/voucher" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtDateItemVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 Jun"
                android:textColor="#787777"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtTitleItemVoucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảm giá 150$"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtRadiusItemVoucher"
                            android:layout_width="5dp"
                            android:layout_height="5dp"
                            android:background="#4EE476"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/txtStatusItemVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Có thể dùng"
                    android:textColor="#4EE476"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtUseVoucherOnList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sử dụng"
                android:textColor="#FE724C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtUnderLineUse"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FE724C"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>