<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".layout.AddLocationLayout">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAddLocationLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAlignment="center"
        app:titleTextAppearance="@style/ToolbarTitleTextAppearance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtNameUserLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_items_product_hint_menu"
            android:padding="20dp"
            android:text="Hoàng Hải"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtSDTUserLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_items_product_hint_menu"
            android:padding="20dp"
            android:text=""
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtCityLocation"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_items_product_hint_menu"
                android:gravity="center"
                android:padding="20dp"
                android:hint="Thành Phố"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtDistrictLocation"
                android:layout_width="170dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/background_items_product_hint_menu"
                android:gravity="center"
                android:padding="20dp"
                android:hint="Quận / Huyện"
                android:textSize="20sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/txtWardLocation"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_items_product_hint_menu"
            android:padding="20dp"
            android:hint="Phường / Xã"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtStreetLocation"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_items_product_hint_menu"
            android:padding="20dp"
            android:hint="Tên đường, Tòa nhà, Số nhà"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAddLocationToFirebase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_button_product_cart"
        android:gravity="center"
        android:padding="17dp"
        android:text="THÊM ĐỊA CHỈ"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"/>

</LinearLayout>